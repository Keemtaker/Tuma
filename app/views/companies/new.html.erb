<h2 class=style-section>Company Profile</h2>
<div class="container">
  <div class="main-body">
    <%= simple_form_for [@company], html: { class: 'form-horizontal' },wrapper: :horizontal_form do |f| %>
      <div class="form-group">
        <label class="col-md-1 control-label"></label>
        <div class="col-md-9">
           <%= f.input :name,  :label => "Name of Company" %>
        </div>
      </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :description, as: :text, :label => "What do you do", as: :summernote %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :website, :label => "Website" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :location, :label => "City" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :address, :label => "Address" %>
      </div>
    </div>




<div class="form-group">
        <label class="col-md-1 control-label">Industries</label>

    <div class="col-md-9 col-md-offset-3">
      <div class="industry-choices">



            <% Industry.all.each do |industry| %>
    <div class="styled-input-container styled-input--rounded">
      <div class="styled-input-single">

        <input type="checkbox" value="<%= industry.id %>" name="company[industry_ids][]" id="company_industry_ids_<%= industry.id %>"/>
        <label for="company_industry_ids_<%= industry.id %>"Industry>
          <%= industry.name %>
          </label>
</div>
</div>
        <% end %>
      </div>
      </div>
</div>



    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
          <%= f.submit 'Create', class: "btn btn-success" %>

      </div>
    </div>




      <!-- Employment Input -->
        <% end %>
      </form>
    </div>
  </div>


