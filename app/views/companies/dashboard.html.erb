<h1>we are in the company dashboard</h1>

<% @dashboards.each do |dashboard| %>
   <%= dashboard.first_name %>
<% end %>




<h2 class=style-section>Company Profile</h2>
<%= simple_form_for(@company) do |f| %>
<div class="container style-company">
  <%= f.input :name, label: "Name of company",  wrapper_html: { class: 'space-out' } %>
  <%= f.input :description, as: :text, :label => "What do you do", wrapper_html: { class: 'space-out' }%>
  <%= f.input :website, :label => "Website", wrapper_html: { class: 'space-out' } %>
  <%= f.input :location, label: "City", wrapper_html: { class: 'space-out' } %>
  <%= f.input :address, :label => "Address", wrapper_html: { class: 'space-out' } %>
  <%= f.input :sector, :label => "Which sector or sectors do you want to disrupt?", wrapper_html: { class: 'space-out' } %>
  <%= f.input :photo, :label => "Image", wrapper_html: {class: 'space-out'} %>
  <%= f.input :photo_cache, as: :hidden %>

          <div class="form-group">
            <input type="hidden" name="company[perk_ids][]" value="">
            <div class="search-perk-choices">
              <% Perk.all.each do |perk| %>
                <input type="checkbox" class="hidden"  value="<%= perk.id %>" name="company[perk_ids][]"
                id="company_perk_ids_<%= perk.id %>">
                <label class="search-perk-choice" for="company_perk_ids_<%= perk.id %>">
                  <div class="search-perk-icon-circle">
                  </div>
               <i class="fa fa-cutlery search-perk-icon"></i>
                  <span class="search-perk-name">
                  <%= perk.name %>
                </span>
                </label>
              <% end %>
            </div>
          </div>

  <%= f.submit 'Create', class: "btn btn-success" %>
</div>
<% end %>
