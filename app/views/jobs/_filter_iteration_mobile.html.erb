              <%= search_form_for @search, :class => 'filters_click' do |f| %>
                <% @jobs.each do |job| %>
                  <% if job.job_type? %>
                    <% new_roles << job.job_type %>
                  <% end %>
                <% end %>

                <% new_roles.uniq.each do |new_role| %>
                  <a>
                    <label>
                      <li>
                        <%= check_box_tag('q[job_type_eq_any][]', new_role) %>
                        <%= new_role %>
                      </li>
                    </label>
                  </a>
                <% end %>
              <% end %>
            </div>
          </ul>
        </div>
      </div>

      <div class="col-xs-4">
        <div class="dropdown">
          <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">Types
          <span class="caret"></span></button>
          <ul class="dropdown-menu dropdown-menu-right">
            <div class="filter-style">
              <% new_roles = [] %>
              <%= search_form_for @search, :class => 'filters_click' do |f| %>
                <% @jobs.each do |job| %>
                  <% if job.salary? %>
                    <% new_roles << job.salary %>
                  <% end %>
                <% end %>

                <% new_roles.uniq.each do |new_role| %>
