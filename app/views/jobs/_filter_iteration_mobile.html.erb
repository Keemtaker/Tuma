                    <label>
                      <li>
                        <%= check_box_tag('q[salary_eq_any][]', new_role) %>
                        <%= new_role %>
                      </li>
                    </label>
                  </a>
                <% end %>
              <% end %>
            </div>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
