<%= simple_form_for [@company, @job], html: { class: 'form-horizontal' },wrapper: :horizontal_form do |f| %>

  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :title,  :label => "Job title" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :role, collection: ["Fullstack Developer", "Backend Developer", "Frontend Developer", "Engineer", "IOS Developer", "Android Developer", "Designer", "Business Developer", "Data Science", "Customer Service", "Project Management", "Sales", "Marketing", "Consulting", "Other"], :label => "Role" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :pitch, as: :text, :label => "Company Pitch", as: :trix_editor %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :description, as: :text, :label => "Job Description", as: :trix_editor %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :location,  :label => "Location" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :job_type, collection: ["Full-time", "Part-time", "Internship", "Student", "Co-founder", "Freelance"], :label => "Job Type" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :salary, collection: ["Paid", "Unpaid", "Commission"], :label => "Salary" %>
    </div>
  </div>

  <div class="form-group label-adjust">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :job_application_type, as: :radio_buttons, collection: [['Apply By Email', 'Email', checked: true ], ['Apply By Url', 'Url' ]], :label => "How to apply" %>
    </div>
  </div>

  <div class="form-group show-job-email" >
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :job_email, :label => "Job Email" %>
    </div>
  </div>

  <div class="form-group form-group--inactive show-job-url">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :job_url, :label => "Job Url" %>
    </div>
  </div>


  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :keywords, :label => "Job Keywords" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9">
      <%= f.input :email, :label => "Recruiter Email" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-1 control-label"></label>
    <div class="col-md-9 text-center" style="margin-top: 110px;">
      <%= f.button :submit , name: "previewButt", value: "Preview", formtarget:"_blank", data: { disable_with: false } %>
      <%= f.button :submit , name: "createButt", value: "Post Job", class: "btn btn-success post-btn", data: { disable_with: false } %>
    </div>
    <div class="col-md-9" style="margin-top: 80px;">
      <p style="color: gray;">Click <strong>Preview</strong> to see how your job posting would appear to applicants. The preview would open in a new tab. Return back to this page to <strong>Post job</strong> or make <strong>Edits</strong>.</p>
    </div>
  </div>
 <% end %>
